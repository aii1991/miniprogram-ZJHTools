/**index.wxss**/
.table{
  width: 100%;
  height: auto;
  display: flex;
  border: 2rpx #e2e2e2 solid;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.table .row{
  width: 100%;
  min-height: 50rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  font-size: 24rpx;
  color: #000;
}

.table .row.fix-top{
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 99;
}

.table .row .col{
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 50rpx;
  width: 16.6%;
  border-right: 2rpx #e2e2e2 solid;
  word-break: break-all;
}

.table .row .col.header{
  font-weight: bold;
}

.btn-add{
  background: #fff;
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 40rpx;
  right: 30rpx;
  z-index: 99;
  border-radius: 50%;
}

.btn-add image{
  width: 100rpx;
  height: 100rpx;
}