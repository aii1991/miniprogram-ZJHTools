/* pages/index/index.wxss */
.gird{
  width: 100%;
  height: 60vh;
  position: absolute;
  top: 50%;
  margin-top: -30vh;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.gird .row{
  width: 100%;
  display: flex;
  height: 29vh;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-bottom: 1vh;
}

.gird .row .col{
  width: 49%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #e2e2e2;
}

.gird .row .col .t{
  font-size: 48rpx;
  color: #000;
  margin-top: 10rpx;
}

.icon{
  width: 100rpx;
  height: 100rpx;
}