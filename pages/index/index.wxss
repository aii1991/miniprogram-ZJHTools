/**index.wxss**/
.table{
  width: 100%;
  height: auto;
  display: flex;
  border: 2rpx #e2e2e2 solid;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.table .row{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  font-size: 24rpx;
  color: #000;
}

.table .row .col{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16.6%;
  height: 100%;
  border-right: 2rpx #e2e2e2 solid;
}

.table .row .col.header{
  font-weight: bold;
}

.btn-add{
  background: #fff;
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 30rpx;
  right: 30rpx;
}

.btn-add image{
  width: 100rpx;
  height: 100rpx;
}