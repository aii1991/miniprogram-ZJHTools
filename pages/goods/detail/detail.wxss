/* pages/goods/detail/detail.wxss */
.swiper{
  width: 100%;
  height: 35vh;
}

.swiper .img-box{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper .img-box .img{
  width: 192rpx;
  height: 300rpx;
}

.goods-info-box{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #e2e2e2;
}

.goods-info-box .info{
  font-size: 30rpx;
  color: #000;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 2rpx solid #e2e2e2;
}

.goods-info-box .info .r{
  margin-left: 10rpx;
}