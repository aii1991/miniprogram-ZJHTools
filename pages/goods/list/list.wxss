/* pages/goods/list/list.wxss */
.list{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.list .item{
  width: 240rpx;
  min-height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 5rpx;
}

.list .item .name{
  width: 100%;
  font-size: 22rpx;
  color: #000;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 5rpx;
  padding-left: 30rpx;
}

.list .item .price{
  width: 100%;
  font-size: 22rpx;
  margin-top: 5rpx;
  padding-left: 30rpx;
}